<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.DefaultFragment">


    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/academic_calender_tv"
            android:layout_width="172dp"
            android:layout_height="142dp"
            android:layout_row="1"
            android:layout_column="1"
            android:gravity="center_horizontal"
            android:padding="8dp"
            android:text="@string/academic_calender_text"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            app:drawableTopCompat="@drawable/event" />

        <TextView
            android:id="@+id/grade_calculator_tv"
            android:layout_width="172dp"
            android:layout_height="142dp"
            android:layout_row="1"
            android:layout_column="2"
            android:gravity="center_horizontal"
            android:padding="8dp"
            android:text="@string/grade_calculator_text"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            app:drawableTopCompat="@drawable/calculate" />

        <TextView
            android:id="@+id/email_tutor_tv"
            android:layout_width="172dp"
            android:layout_height="142dp"
            android:layout_row="2"
            android:layout_column="1"
            android:gravity="center_horizontal"
            android:padding="8dp"
            android:text="@string/email_tutor_text"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            app:drawableTopCompat="@drawable/email" />

        <TextView
            android:id="@+id/deadline_summary_tv"
            android:layout_width="172dp"
            android:layout_height="142dp"
            android:layout_row="2"
            android:layout_column="2"
            android:gravity="center_horizontal"
            android:padding="8dp"
            android:text="@string/deadline_summary_text"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            app:drawableTopCompat="@drawable/deadline" />

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>